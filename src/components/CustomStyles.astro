---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    /* ぼんどブランドカラー - Architecture of Intelligence */
    --bond-yellow-main: rgb(250 215 7);   /* #fad707 Neon Yellow */
    --bond-yellow-deep: rgb(220 180 5);   /* Darker Yellow for depth */
    --bond-navy: rgb(31 46 108);          /* #1f2e6c Intellectual Navy */
    --bond-brown: rgb(90 60 30);          /* Deep Brown (kept as sub) */
    --bond-surface: rgb(255 255 255);     /* Pure White */
    --bond-background: rgb(250 250 249);  /* #fafaf9 Matte Paper Beige */
    --bond-text-main: rgb(31 46 108);     /* #1f2e6c Navy as Black */
    --bond-text-sub: rgb(100 100 110);    /* Grayish Navy */
    --bond-border: rgb(31 46 108);        /* Navy Border (thin) */
    
    /* Font Families */
    --aw-font-sans: 'Helvetica Neue', Helvetica, Arial, system-ui, sans-serif;
    --aw-font-serif: 'Didot', 'Bodoni MT', 'Noto Serif JP', serif;
    --aw-font-mono: 'Courier New', Courier, monospace;
    --aw-font-heading: var(--aw-font-serif);

    /* Tailwind Mapping */
    --aw-color-primary: var(--bond-navy);
    --aw-color-secondary: var(--bond-yellow-main);
    --aw-color-accent: var(--bond-yellow-main);

    --aw-color-text-heading: var(--bond-navy);
    --aw-color-text-default: var(--bond-text-main);
    --aw-color-text-muted: var(--bond-text-sub);
    --aw-color-bg-page: var(--bond-background);

    --aw-color-bg-page-dark: var(--bond-navy);

    ::selection {
      background-color: var(--bond-yellow-main);
      color: var(--bond-navy);
    }
  }

  .dark {
    --aw-font-sans: 'Helvetica Neue', Helvetica, Arial, system-ui, sans-serif;
    --aw-font-serif: 'Didot', 'Bodoni MT', 'Noto Serif JP', serif;
    --aw-font-mono: 'Courier New', Courier, monospace;
    --aw-font-heading: var(--aw-font-serif);

    /* Dark Mode (Inverted Logic - Blueprint Style) */
    --bond-yellow-main: rgb(250 215 7);
    --bond-yellow-deep: rgb(208 165 29);
    --bond-navy: rgb(240 240 245);        /* Light Gray/White for text on dark */
    --bond-surface: rgb(20 30 70);        /* Deep Navy Surface */
    --bond-background: rgb(31 46 108);    /* Navy Background (Blueprint) */
    --bond-text-main: rgb(250 250 249);   /* Beige Text */
    --bond-text-sub: rgb(180 180 200);
    --bond-border: rgb(250 250 249);      /* White/Beige Lines */
    
    --aw-color-primary: var(--bond-yellow-main);
    --aw-color-secondary: var(--bond-yellow-deep);
    --aw-color-accent: var(--bond-yellow-main);

    --aw-color-text-heading: var(--bond-text-main);
    --aw-color-text-default: var(--bond-text-main);
    --aw-color-text-muted: var(--bond-text-sub);
    --aw-color-bg-page: var(--bond-background);

    ::selection {
      background-color: var(--bond-yellow-main);
      color: var(--bond-background);
    }

    ::selection {
      background-color: rgb(250 215 7 / 20%);
      color: white;
    }
  }
</style>
