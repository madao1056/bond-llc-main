---
import { Icon } from 'astro-icon/components';
import Button from '~/components/ui/Button.astro';

export interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  description?: string;
  actions?: Array<{
    variant?: string;
    text?: string;
    href?: string;
    icon?: string;
  }>;
}

const {
  id,
  title = 'まずはお気軽にご相談ください',
  subtitle = '何から相談すれば良いか分からない段階からでも大丈夫です',
  description = 'Web制作、EC構築、集客支援、DX化など、デジタルに関することならなんでもご相談ください。宮崎の事業者さまの「困った」を一緒に解決します。',
  actions = [
    {
      variant: 'primary',
      text: 'お問い合わせ',
      href: '/contact',
      icon: 'tabler:mail',
    },
    {
      variant: 'accent',
      text: 'LINE で相談',
      href: 'https://lin.ee/xxxxxx',
      icon: 'tabler:brand-line',
    },
  ],
} = Astro.props;
---

<section id={id} class="relative overflow-hidden bg-bond-navy border-t border-bond-yellow-main/20">
  <!-- Blueprint Grid Background -->
  <div class="absolute inset-0 bg-blueprint-grid opacity-10 pointer-events-none"></div>
  
  <!-- Content Container -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-24">
    
    <!-- Decorative Tech Lines -->
    <div class="absolute top-0 left-10 w-px h-20 bg-bond-yellow-main/50"></div>
    <div class="absolute bottom-0 right-10 w-px h-20 bg-bond-yellow-main/50"></div>
    <div class="absolute top-10 left-0 w-20 h-px bg-bond-yellow-main/50"></div>
    <div class="absolute bottom-10 right-0 w-20 h-px bg-bond-yellow-main/50"></div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Text Area -->
      <div class="text-left">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-12 h-px bg-bond-yellow-main"></div>
          <span class="font-mono text-sm tracking-widest uppercase text-bond-yellow-main">お問い合わせ</span>
        </div>

        <h2 class="text-4xl md:text-5xl font-serif font-bold text-white mb-6 leading-tight">
          {title}
        </h2>
        
        {subtitle && (
          <p class="text-xl text-white/90 mb-8 font-sans border-l-4 border-bond-yellow-main pl-6 py-2">
            {subtitle}
          </p>
        )}
        
        {description && (
          <p class="text-lg text-white/70 mb-10 leading-relaxed max-w-xl">
            {description}
          </p>
        )}
      </div>

      <!-- Action Area -->
      <div class="bg-bond-surface/5 border border-white/10 p-8 lg:p-12 relative backdrop-blur-sm">
        <!-- Corner Accents -->
        <div class="absolute -top-1 -left-1 w-4 h-4 border-t border-l border-bond-yellow-main"></div>
        <div class="absolute -bottom-1 -right-1 w-4 h-4 border-b border-r border-bond-yellow-main"></div>

        <div class="flex flex-col gap-6">
           {actions && actions.length > 0 && (
            <div class="flex flex-col sm:flex-row gap-4">
              {actions.map(({ text, href, variant = 'primary', icon }) => {
                const isLine = text?.includes('LINE');
                return (
                  <Button
                    variant={variant}
                    href={href}
                    class={`w-full sm:w-auto ${
                      isLine 
                        ? 'bg-[#06C755] border-[#06C755] text-white hover:bg-[#05b34c]' 
                        : 'bg-white border-white text-bond-navy hover:bg-bond-yellow-main hover:border-bond-yellow-main hover:text-bond-navy'
                    }`}
                    icon={icon}
                  >
                    {text}
                  </Button>
                );
              })}
            </div>
          )}

          <!-- 営業時間・連絡先情報 -->
          <div class="pt-8 border-t border-white/10 mt-2">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-y-4 gap-x-8 text-white/60 font-mono text-sm">
              <div class="flex items-center">
                <Icon name="tabler:clock" class="w-4 h-4 mr-3 text-bond-yellow-main" />
                <span>Mon-Fri 9:00-18:00</span>
              </div>
              <div class="flex items-center">
                <Icon name="tabler:phone" class="w-4 h-4 mr-3 text-bond-yellow-main" />
                <a href="tel:0985-XX-XXXX" class="hover:text-white transition-colors">
                  0985-XX-XXXX
                </a>
              </div>
              <div class="flex items-center sm:col-span-2">
                <Icon name="tabler:map-pin" class="w-4 h-4 mr-3 text-bond-yellow-main" />
                <span>Miyazaki City, Japan</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>