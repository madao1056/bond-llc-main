---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import { Icon } from 'astro-icon/components';
import lineIcon from '~/icons/LINE.png';
import heroServices from '~/assets/images/hero-services.png';

const metadata = {
  title: 'サービス一覧',
  description: '合同会社ぼんどが提供するデジタルマーケティング・Web制作・DX支援サービスをご紹介します。',
};

const services = [
  {
    id: 'web-production',
    title: 'Web制作・運用',
    subtitle: 'High-Performance Web Design',
    description: 'お客さまのビジネスに最適なWebサイトを企画から制作、運用まで一貫してサポート。SEO対策やアクセス解析も含めた総合的なWeb戦略を提供します。',
    icon: 'tabler:world-www',
    href: '/services/web-production',
    features: [
      { title: 'レスポンシブデザイン', description: 'PC・スマホ・タブレットすべてに最適化', icon: 'tabler:devices' },
      { title: 'SEO最適化', description: '検索エンジンで見つけてもらいやすく', icon: 'tabler:search' },
      { title: '保守運用サポート', description: '更新作業や改善提案を継続的に実施', icon: 'tabler:tool' },
      { title: 'アクセス解析', description: 'データに基づいた改善提案', icon: 'tabler:chart-line' },
    ],
  },
  {
    id: 'ec',
    title: 'EC構築・オンライン販売支援',
    subtitle: 'E-Commerce Solution',
    description: '地域の特産品や商品をオンラインで販売。Shopifyを中心としたECサイト構築から、商品撮影、在庫管理、配送まで総合的にサポートします。',
    icon: 'tabler:shopping-cart',
    features: [
      { title: 'Shopify構築', description: '世界標準のECプラットフォーム', icon: 'tabler:building-store' },
      { title: '商品撮影・登録', description: '魅力的な商品ページ作成', icon: 'tabler:camera' },
      { title: '決済システム導入', description: '安全で便利な決済手段', icon: 'tabler:credit-card' },
      { title: '運用代行', description: 'データ分析・ページ改善・商品登録', icon: 'tabler:chart-line' },
    ],
  },
  {
    id: 'marketing',
    title: 'MEO・LINE・集客導線設計',
    subtitle: 'Digital Marketing & CRM',
    description: 'Googleマップでの上位表示、LINE公式アカウントの構築・運用、SNS活用など、地域ビジネスに特化した集客支援を行います。',
    icon: 'tabler:map-pin',
    features: [
      { title: 'MEO対策', description: 'Googleマップで上位表示', icon: 'tabler:map-search' },
      { title: 'LINE公式構築', description: 'リピーター獲得の仕組み', icon: 'tabler:brand-line' },
      { title: 'SNS運用', description: '情報発信と顧客接点強化', icon: 'tabler:share' },
      { title: '口コミ管理', description: '評価向上と信頼構築', icon: 'tabler:star' },
    ],
  },
  {
    id: 'dx',
    title: 'ローカルDX・業務効率化',
    subtitle: 'Local Digital Transformation',
    description: '手作業の自動化、データ活用、システム導入により業務効率を大幅に改善。地域企業のDX推進をサポートします。',
    icon: 'tabler:cpu',
    features: [
      { title: '業務自動化', description: '繰り返し作業をシステム化', icon: 'tabler:robot' },
      { title: 'データ分析', description: '経営判断に役立つ見える化', icon: 'tabler:chart-dots' },
      { title: 'システム導入', description: '最適なツール選定と導入', icon: 'tabler:settings' },
      { title: '社員研修', description: 'デジタルツール活用支援', icon: 'tabler:school' },
    ],
  },
];
---

<Layout metadata={metadata}>
  <!-- ヒーローセクション -->
  <Hero2
    tagline="Our Services"
    actions={[
      {
        text: '無料相談はこちら',
        href: '/contact',
        variant: 'primary',
      },
    ]}
    image={{ src: heroServices, alt: 'Bond LLC Services' }}
  >
    <Fragment slot="title">
      サービス一覧
    </Fragment>

    <Fragment slot="subtitle">
      地域ビジネスの成長を支える<br />
      デジタルソリューション
    </Fragment>
  </Hero2>

  <!-- 料金についての考え方 -->
  <section class="py-16 bg-bond-surface border-y border-bond-navy/10 relative overflow-hidden">
    <!-- Grid -->
    <div class="absolute inset-0 bg-blueprint-grid opacity-10 pointer-events-none"></div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 relative z-10">
      <div class="bg-white p-8 md:p-12 border border-bond-navy/10 relative">
        <!-- Decoration -->
        <div class="absolute top-0 left-0 w-2 h-full bg-bond-yellow-main"></div>
        <div class="absolute top-4 right-4 text-xs font-mono text-bond-navy/30">FIG. PR-01 // PRICING POLICY</div>

        <div class="text-center mb-12">
          <div class="inline-flex items-center justify-center w-16 h-16 border-2 border-bond-navy mb-4">
            <Icon name="tabler:currency-yen" class="w-8 h-8 text-bond-navy" />
          </div>
          <h2 class="text-2xl md:text-3xl font-serif font-bold text-bond-navy mb-4">
            合同会社ぼんどは、<br>見栄えだけの料金プランは掲載しておりません
          </h2>
          <p class="text-bond-text-sub font-mono text-sm tracking-widest uppercase">
            Pricing Strategy & Philosophy
          </p>
        </div>
        
        <div class="space-y-8 text-bond-text-main">
          <div class="bg-bond-surface/50 p-6 border border-bond-navy/5">
            <p class="text-lg font-serif font-bold text-bond-navy mb-3 flex items-center gap-2">
              <span class="text-bond-yellow-main">💡</span> なぜ料金表を載せないの？
            </p>
            <p class="leading-relaxed">
              「Web制作30万円」「EC構築50万円」といった料金表をよく見かけます。<br />
              しかし、<strong class="text-bond-navy bg-bond-yellow-main/20 px-1">あなたの事業にとって、本当に必要なものは何でしょうか？</strong>
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="p-6 border border-bond-navy/10 relative">
               <h3 class="font-bold text-bond-navy mb-4 font-serif text-xl">お客さまごとに異なる状況</h3>
               <ul class="space-y-3 font-mono text-sm">
                  {[
                    {label: 'Phase', val: '事業フェーズ'},
                    {label: 'Industry', val: '業種・業界'},
                    {label: 'Issue', val: '経営課題'},
                    {label: 'Resource', val: '予算・人員'}
                  ].map(item => (
                    <li class="flex items-center justify-between border-b border-dashed border-bond-navy/10 pb-2">
                      <span class="text-bond-navy/60">{item.label}</span>
                      <span class="font-bold text-bond-navy">{item.val}</span>
                    </li>
                  ))}
               </ul>
            </div>

            <div class="p-6 border border-bond-navy/10 relative bg-bond-navy text-white">
              <h3 class="font-bold text-white mb-4 font-serif text-xl flex items-center gap-2">
                <Icon name="tabler:bulb" class="w-5 h-5 text-bond-yellow-main" />
                診断アプローチ
              </h3>
               <p class="text-sm leading-relaxed text-white/80 mb-4">
                頭痛で病院に行ったら、原因はストレスだった。<br>
                ビジネスも同じで、「Webサイトが欲しい」の裏に「集客」や「採用」の課題が隠れています。
               </p>
               <p class="text-bond-yellow-main font-bold text-sm">
                私たちは「診断」から始め、最適な処方箋（解決策）をご提案します。
               </p>
            </div>
          </div>
          
          <div class="border-t border-bond-navy/10 pt-8 mt-8 text-center">
             <p class="font-serif font-bold text-xl text-bond-navy mb-2">私たちの約束</p>
             <p class="max-w-2xl mx-auto leading-relaxed">
               画一的な料金プランに当てはめるのではなく、あなたの事業の現状・課題・目標をしっかりお聞きして、
               <strong class="border-b-2 border-bond-yellow-main">本当に必要なものを、適正な価格で</strong>ご提案します。
             </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 3つの主要な悩みとアプローチ -->
  <section class="py-20 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-serif font-bold text-bond-navy mb-4">
          よくある課題と解決策
        </h2>
        <p class="text-sm font-mono text-bond-text-sub uppercase tracking-widest">
          Solutions for Issues
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Issue 01 -->
        <div class="group border border-bond-navy/10 hover:border-bond-navy transition-colors bg-white relative">
          <div class="absolute top-0 right-0 p-4 font-mono text-4xl text-bond-navy/5 font-bold group-hover:text-bond-navy/10">01</div>
          <div class="p-8">
            <div class="w-12 h-12 bg-bond-navy text-white flex items-center justify-center mb-6">
              <Icon name="tabler:users-minus" class="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold text-bond-navy mb-2 font-serif">集客・売上</h3>
            <p class="text-sm text-bond-text-sub mb-6 h-12">「お客さんが来ない」「Webサイトからの反応がない」</p>
            
            <div class="space-y-4">
              <div class="border-l-2 border-bond-yellow-main pl-4">
                <p class="text-xs font-mono text-bond-navy/60 mb-1">STEP 1</p>
                <p class="text-sm font-bold text-bond-navy">現状分析と課題特定</p>
              </div>
              <div class="border-l-2 border-bond-yellow-main pl-4">
                <p class="text-xs font-mono text-bond-navy/60 mb-1">STEP 2</p>
                <p class="text-sm font-bold text-bond-navy">MEO・LINE導入</p>
              </div>
              <div class="border-l-2 border-bond-yellow-main pl-4">
                <p class="text-xs font-mono text-bond-navy/60 mb-1">STEP 3</p>
                <p class="text-sm font-bold text-bond-navy">効果測定と改善</p>
              </div>
            </div>
          </div>
          <div class="bg-bond-surface p-4 text-center border-t border-bond-navy/10">
            <p class="text-xs font-bold text-bond-navy">GOAL: 安定した集客基盤の構築</p>
          </div>
        </div>

        <!-- Issue 02 -->
        <div class="group border border-bond-navy/10 hover:border-bond-navy transition-colors bg-white relative">
          <div class="absolute top-0 right-0 p-4 font-mono text-4xl text-bond-navy/5 font-bold group-hover:text-bond-navy/10">02</div>
          <div class="p-8">
             <div class="w-12 h-12 bg-bond-navy text-white flex items-center justify-center mb-6">
              <Icon name="tabler:clock-exclamation" class="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold text-bond-navy mb-2 font-serif">業務効率・時間</h3>
            <p class="text-sm text-bond-text-sub mb-6 h-12">「事務作業に追われている」「情報共有がうまくいかない」</p>
            
            <div class="space-y-4">
              <div class="border-l-2 border-bond-yellow-main pl-4">
                <p class="text-xs font-mono text-bond-navy/60 mb-1">STEP 1</p>
                <p class="text-sm font-bold text-bond-navy">業務フロー可視化</p>
              </div>
              <div class="border-l-2 border-bond-yellow-main pl-4">
                <p class="text-xs font-mono text-bond-navy/60 mb-1">STEP 2</p>
                <p class="text-sm font-bold text-bond-navy">ツール選定・導入</p>
              </div>
              <div class="border-l-2 border-bond-yellow-main pl-4">
                <p class="text-xs font-mono text-bond-navy/60 mb-1">STEP 3</p>
                <p class="text-sm font-bold text-bond-navy">定着支援</p>
              </div>
            </div>
          </div>
          <div class="bg-bond-surface p-4 text-center border-t border-bond-navy/10">
            <p class="text-xs font-bold text-bond-navy">GOAL: 本業に集中できる環境</p>
          </div>
        </div>

        <!-- Issue 03 -->
        <div class="group border border-bond-navy/10 hover:border-bond-navy transition-colors bg-white relative">
          <div class="absolute top-0 right-0 p-4 font-mono text-4xl text-bond-navy/5 font-bold group-hover:text-bond-navy/10">03</div>
          <div class="p-8">
            <div class="w-12 h-12 bg-bond-navy text-white flex items-center justify-center mb-6">
              <Icon name="tabler:help-hexagon" class="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold text-bond-navy mb-2 font-serif">IT未経験</h3>
            <p class="text-sm text-bond-text-sub mb-6 h-12">「何から始めればいいか分からない」「難しいことは苦手」</p>
            
            <div class="space-y-4">
              <div class="border-l-2 border-bond-yellow-main pl-4">
                <p class="text-xs font-mono text-bond-navy/60 mb-1">STEP 1</p>
                <p class="text-sm font-bold text-bond-navy">やさしい無料相談</p>
              </div>
              <div class="border-l-2 border-bond-yellow-main pl-4">
                <p class="text-xs font-mono text-bond-navy/60 mb-1">STEP 2</p>
                <p class="text-sm font-bold text-bond-navy">スモールスタート</p>
              </div>
              <div class="border-l-2 border-bond-yellow-main pl-4">
                <p class="text-xs font-mono text-bond-navy/60 mb-1">STEP 3</p>
                <p class="text-sm font-bold text-bond-navy">伴走サポート</p>
              </div>
            </div>
          </div>
          <div class="bg-bond-surface p-4 text-center border-t border-bond-navy/10">
            <p class="text-xs font-bold text-bond-navy">GOAL: デジタルを味方につける</p>
          </div>
        </div>
      </div>
      
      <!-- Summary -->
      <div class="mt-16 text-center">
        <div class="inline-block border border-bond-navy/20 p-8 bg-bond-background relative">
           <div class="absolute -top-1 -left-1 w-2 h-2 bg-bond-navy"></div>
           <div class="absolute -top-1 -right-1 w-2 h-2 bg-bond-navy"></div>
           <div class="absolute -bottom-1 -left-1 w-2 h-2 bg-bond-navy"></div>
           <div class="absolute -bottom-1 -right-1 w-2 h-2 bg-bond-navy"></div>
           
           <p class="text-lg font-bold text-bond-navy mb-4">単なる「業者」ではなく「パートナー」として。</p>
           <a href="/contact" class="btn-primary">
              無料相談で課題を整理する
              <Icon name="tabler:arrow-right" class="inline-block w-4 h-4 ml-2" />
           </a>
        </div>
      </div>
    </div>
  </section>

  <!-- サービス一覧 -->
  <section class="py-16 lg:py-24 bg-bond-surface border-t border-bond-navy/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="space-y-20">
        {services.map((service, index) => (
          <div id={service.id} class="scroll-mt-20">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
               <!-- Header Side -->
               <div class="lg:col-span-4">
                  <div class="sticky top-24">
                    <div class="text-6xl font-bold font-serif text-bond-navy opacity-20 mb-[-2rem] ml-[-1rem] select-none">0{index + 1}</div>
                    <div class="relative z-10 pt-4">
                       <h2 class="text-3xl font-bold text-bond-navy mb-2 font-serif">{service.title}</h2>
                       <p class="font-mono text-sm uppercase tracking-widest text-bond-yellow-deep mb-6">{service.subtitle}</p>
                       <p class="text-bond-text-main leading-relaxed mb-6">{service.description}</p>
                       
                       {service.href && (
                        <a href={service.href} class="btn-secondary w-full text-center group">
                          View Details
                          <Icon name="tabler:arrow-right" class="inline-block w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" />
                        </a>
                      )}
                    </div>
                  </div>
               </div>

               <!-- Features Grid -->
               <div class="lg:col-span-8">
                 <div class="grid grid-cols-1 md:grid-cols-2 gap-px bg-bond-navy/10 border border-bond-navy/10">
                    {service.features.map((feature) => (
                      <div class="bg-white p-6 hover:bg-bond-yellow-main/5 transition-colors">
                         <div class="flex items-start gap-4">
                           <div class="w-10 h-10 border border-bond-navy/20 flex items-center justify-center flex-shrink-0">
                              <Icon name={feature.icon} class="w-5 h-5 text-bond-navy" />
                           </div>
                           <div>
                             <h4 class="font-bold text-bond-navy mb-1">{feature.title}</h4>
                             <p class="text-sm text-bond-text-sub leading-snug">{feature.description}</p>
                           </div>
                         </div>
                      </div>
                    ))}
                 </div>
               </div>
            </div>

            {index < services.length - 1 && (
              <div class="mt-20 border-b border-dashed border-bond-navy/20"></div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 lg:py-24 bg-bond-navy relative overflow-hidden text-center">
    <!-- Grid -->
    <div class="absolute inset-0 bg-blueprint-grid opacity-10 pointer-events-none"></div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 relative z-10">
      <h2 class="text-3xl md:text-5xl font-serif font-bold text-white mb-6">
        無料相談から始める
      </h2>
      <p class="text-lg text-white/80 mb-10">
        お客さまの課題やご要望をお聞きして、最適なプランをご提案します。<br />
        オンライン相談も可能です。
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn-primary bg-white text-bond-navy border-white hover:bg-gray-100 hover:text-bond-navy">
          無料相談を申し込む
        </a>
        <a href="https://lin.ee/xxxxxx" class="btn-secondary bg-[#06C755] border-[#06C755] text-white hover:bg-[#05b34c] inline-flex items-center justify-center">
          <img src={lineIcon.src} alt="LINE" class="w-5 h-5 mr-2" />
          LINEで相談
        </a>
      </div>
    </div>
  </section>
</Layout>
