---
import Layout from '~/layouts/PageLayout.astro';

// ぼんどカスタムコンポーネント
import BondHero from '~/components/widgets/BondHero.astro';
import BondAbout from '~/components/widgets/BondAbout.astro';
import BondServices from '~/components/widgets/BondServices.astro';
import BondWorks from '~/components/widgets/BondWorks.astro';
import BondMedia from '~/components/widgets/BondMedia.astro';
import BondStrength from '~/components/widgets/BondStrength.astro';
import BondCTA from '~/components/widgets/BondCTA.astro';

const metadata = {
  title: '株式会社ぼんど | 宮崎のWeb制作・EC構築・DX支援',
  description: '宮崎を拠点に、Web制作・EC構築・MEO・LINE・DX支援・ローカルメディア運営を通じて、事業者とお客さまの関係性が続く仕組みをデザインします。',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- ヒーローセクション -->
  <BondHero
    title="地域の挑戦とお客さまをつなぐ、\n絆（きずな）のような存在へ。"
    subtitle="宮崎を拠点に、Web制作・EC構築・MEO・LINE・DX支援・ローカルメディア運営を通じて、事業者とお客さまの関係性が続く仕組みをデザインします。"
    actions={[
      {
        variant: 'primary',
        text: 'お問い合わせ',
        href: '/contact',
        icon: 'tabler:mail',
      },
      {
        variant: 'secondary',
        text: 'ぼんどについて',
        href: '#about',
      },
    ]}
  />

  <!-- ミッション・ビジョン・バリュー -->
  <BondAbout
    id="about"
    title="ぼんどとは"
    subtitle="地域と事業者の「つながり」を大切にする会社です"
  />

  <!-- 提供サービス -->
  <BondServices
    id="services"
    title="提供サービス"
    subtitle="デジタルの力で地域ビジネスの成長を支援します"
  />

  <!-- 実績 -->
  <BondWorks
    id="works"
    title="実績"
    subtitle="地域の事業者さまと共に歩んできました"
  />

  <!-- みやびと -->
  <BondMedia
    id="media"
    title="みやびと"
    subtitle="ローカルメディアで宮崎の魅力を発信"
  />

  <!-- 強み -->
  <BondStrength
    id="strength"
    title="ぼんどの強み"
    subtitle="地域事業者さまに選ばれる3つの理由"
  />

  <!-- CTA -->
  <BondCTA
    id="contact-cta"
    title="まずはお気軽にご相談ください"
    subtitle="何から相談すれば良いか分からない段階からでも大丈夫です"
    description="Web制作、EC構築、集客支援、DX化など、デジタルに関することならなんでもご相談ください。宮崎の事業者さまの「困った」を一緒に解決します。"
    actions={[
      {
        variant: 'primary',
        text: 'お問い合わせフォーム',
        href: '/contact',
        icon: 'tabler:mail',
      },
      {
        variant: 'accent',
        text: 'LINEで相談',
        href: 'https://lin.ee/xxxxxx',
        icon: 'tabler:brand-line',
      },
    ]}
  />
</Layout>